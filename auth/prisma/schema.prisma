generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                             String    @id @default(cuid())
  email                          String    @unique
  name                           String?
  lastName                       String?
  password                       String
  picture                        String?
  phone                          String?
  birthdate                      DateTime?
  role                           Role      @default(USER)
  referrerId                     String?
  referralCount                  Int       @default(0)
  createdAt                      DateTime  @default(now())
  updatedAt                      DateTime  @updatedAt
  hashedRt                       String?
}

enum Role {
  USER
  ADMIN
}
